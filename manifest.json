{
  "manifest_version": 3,
  "name": "Kick Mood Meter",
  "version": "1.0",
  "description": "Analyzes chat sentiment on Kick streams with a live on-screen widget",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {

      "128": "kick-logo.png"
    }


    
  },
  "content_scripts": [
    {
      "matches": ["*://*.kick.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["Mood_Meter.png", "labeled_chat_messages.csv"],
      "matches": ["*://*.kick.com/*"]
    }
  ]
}